{
  // 프로젝트를 열기만 해도 ESLint(Flat config)가 TS/TSX 파일을 즉시 검사하도록 설정
  // (개별 개발자가 VSCode 설정을 따로 만지지 않아도 되게끔 repo에 포함)
  "eslint.useFlatConfig": true,
  "eslint.validate": [
    "javascript",
    "javascriptreact",
    "typescript",
    "typescriptreact"
  ],
  "editor.codeActionsOnSave": {
    "source.fixAll.eslint": "explicit"
  }
}
